<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanveer.sustattendancemanager" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".backgroundUpdate" >
        </service>

        <activity
            android:name=".MainActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeWindow"
            android:label="Welcome" >
            <intent-filter>
                <action android:name="android.intent.action.WelcomeWindow" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CourseActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CourseActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceActivity"
            android:label="Choose course" >
            <intent-filter>
                <action android:name="android.intent.action.AttendanceActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceClass"
            android:label="Classes" >
            <intent-filter>
                <action android:name="android.intent.action.AttendanceClass" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceWindow"
            android:label="Attendance" >
            <intent-filter>
                <action android:name="android.intent.action.AttendanceWindow" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExportMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.AttendanceWindow" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseManage"
            android:label="@string/title_activity_course_manage" >
        </activity>
        <activity
            android:name=".CourseManageCldetail"
            android:label="@string/title_activity_course_manage_cldetail" >
        </activity>
        <activity
            android:name=".ExportFinal"
            android:label="@string/title_activity_course_manage_cldetail" >
        </activity>
    </application>

</manifest>
